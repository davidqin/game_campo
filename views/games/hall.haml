%script{:src => "/assets/hall.js"}
.hero-unit
  %h1= @game.name
  %p= @game.description
  %p
    %a.btn.btn-primary.btn-large Learn more

.row-fluid#rooms
  - @game.rooms.each_slice(4) do |rooms|
    %ul.thumbnails
      - rooms.each do |room|
        %li.span3
          %a.thumbnail.room.players-2{:href => "#{@game.path}/#{room.number}"}
            .player.player1{href: '#'}
              %img{src: "/assets/anonymity.png"}
              %span= room.player_1 ? room.player_1.email : "player_1"
            .player.player2{href: '#'}
              %img{src: "/assets/anonymity.png"}
              %span player_2